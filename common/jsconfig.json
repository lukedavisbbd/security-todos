{
    "compilerOptions": {
        "target": "es2020",
        "module": "es2020",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "*": ["./*"]
        },
        "checkJs": true,
        "noImplicitAny": true,
        "strict": true,
        "strictNullChecks": true
    },
    "include": ["./src/**/*.js"]
}